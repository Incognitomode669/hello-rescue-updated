                            android:textSize="10sp" />

                        <CheckBox
                            android:id="@+id/checkbox_unresponsive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unresponsive"
                            android:textSize="10sp" />

                    </LinearLayout>

