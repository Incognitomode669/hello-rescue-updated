                            android:textSize="10sp" />

                        <CheckBox
                            android:id="@+id/checkbox_unconscious"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unconscious"
                            android:textSize="8sp" />

                        <CheckBox
                            android:id="@+id/checkbox_combative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Combative"
                            android:textSize="10sp" />




                    </LinearLayout>

                    <TextView
                        android:id="@+id/description_text_mdr"
                        android:layout_width="wrap_content"
