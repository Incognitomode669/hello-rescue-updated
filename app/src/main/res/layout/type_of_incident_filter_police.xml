<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/police_responder_filter_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/filter_respoder_shape"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">


        <!-- Type of Accident TextView aligned to center -->

        <!-- Date TextView aligned to end -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/vehicularAccidentCheckbox"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:gravity="center">

                    </CheckBox>


                    <RelativeLayout
                        android:id="@+id/VehicularAccidentContainer"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/incident_shape_bg"
                        android:clickable="true"
                        app:layout_constraintEnd_toEndOf="@+id/textView7"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7">


                        <ImageButton
                            android:id="@+id/vehicularAccidentIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_background_icons"
                            android:contentDescription="Icon button"
                            app:srcCompat="@drawable/vehicular_accident_icon" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inika_regular"
                            android:text="Vehicular Accident"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/DomesticViolenceCheckbox"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:gravity="center"></CheckBox>


                    <RelativeLayout
                        android:id="@+id/DomesticViolenceContainer"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/incident_shape_bg"
                        android:clickable="true"
                        app:layout_constraintEnd_toEndOf="@+id/textView7"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7">


                        <ImageButton
                            android:id="@+id/DomesticViolenceIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_background_icons"
                            android:contentDescription="Icon button"
                            app:srcCompat="@drawable/domestic_violence_icon" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inika_regular"
                            android:text="Domestic Violence"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/RobberyAlarmCheckbox"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:gravity="center"></CheckBox>


                    <RelativeLayout
                        android:id="@+id/RobberyAlarmContainer"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/incident_shape_bg"
                        android:clickable="true"
                        app:layout_constraintEnd_toEndOf="@+id/textView7"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7">


                        <ImageButton
                            android:id="@+id/RobberyAlarmIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_background_icons"
                            android:contentDescription="Icon button"
                            app:srcCompat="@drawable/robbery_alarm_icon" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inika_regular"
                            android:text="Robbery Alarm"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/TroubleAlarmCheckbox"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:gravity="center"></CheckBox>


                    <RelativeLayout
                        android:id="@+id/TroubleAlarmContainer"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/incident_shape_bg"
                        android:clickable="true"
                        app:layout_constraintEnd_toEndOf="@+id/textView7"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7">


                        <ImageButton
                            android:id="@+id/TroubleAlarmIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_background_icons"
                            android:contentDescription="Icon button"
                            app:srcCompat="@drawable/trouble_alarm_icon" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inika_regular"
                            android:text="Trouble Alarm"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/ShootingAlarmCheckbox"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:gravity="center"></CheckBox>


                    <RelativeLayout
                        android:id="@+id/ShootingAlarmContainer"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/incident_shape_bg"
                        android:clickable="true"
                        app:layout_constraintEnd_toEndOf="@+id/textView7"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7">


                        <ImageButton
                            android:id="@+id/ShootingAlarmIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/circle_background_icons"
                            android:contentDescription="Icon button"
                            app:srcCompat="@drawable/shooting_alarm_icon" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inika_regular"
                            android:text="Shooting Alarm"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>