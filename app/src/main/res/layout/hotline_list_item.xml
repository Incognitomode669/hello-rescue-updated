<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/incident_shape_bg"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/role_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle_background_icons"
            android:contentDescription="Call icon"
            android:padding="8dp"
            android:src="@drawable/call_icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Role"
                android:textColor="@color/black"
                android:textSize="18sp" />





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/call_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inika_regular"
                    android:text="Call"
                    android:textColor="@color/black"
                    android:textSize="13sp" />




            <TextView
                android:id="@+id/hotline_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="serif"
                android:text="0912-345-6789"
                android:textColor="@color/black"
                android:textSize="13sp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="0dp"
            android:contentDescription="Edit Hotline"
            android:padding="4dp"
            app:srcCompat="@drawable/edit_police"/>

        <ImageView
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="Delete responder"
            android:padding="4dp"
            app:srcCompat="@drawable/delete_button" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
