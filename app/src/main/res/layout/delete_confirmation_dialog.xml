<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/yes_no_delete_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/yes_no_delete_background_shape"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:elevation="10dp"
            android:fontFamily="@font/inria_serif_bold"
            android:gravity="start"
            android:singleLine="true"
            android:text="Delete Hotline?"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:elevation="10dp"
            android:fontFamily="@font/inika_regular"
            android:gravity="start"
            android:singleLine="true"
            android:text="Are you sure you want to delete this hotline?"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/filter_text"
            app:layout_constraintTop_toBottomOf="@+id/filter_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/yes"
                android:layout_width="295dp"
                android:layout_height="35dp"
                android:background="@drawable/delete_confirmation_yes_shape"
                android:fontFamily="@font/inika_bold"
                android:shadowColor="#000000"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:text="Yes"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/no"
                android:layout_width="295dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/delete_confirmation_no_shape"
                android:elevation="20dp"
                android:fontFamily="@font/inika_bold"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="No"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>