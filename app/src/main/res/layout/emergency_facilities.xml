<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/facilities_back"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/flag_transparent"
        android:contentDescription="back button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/History_Police_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/arrow1"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/History_Police_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inria_serif_bold"
        android:text="Emergency Facility"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <LinearLayout
        android:id="@+id/policeStation_facility"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/services_shape"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/History_Police_txt">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="Icon button"
            app:srcCompat="@drawable/police_facility" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="2dp"
                android:fontFamily="@font/inika_regular"
                android:text="POLICE STATION"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="2dp"
                android:fontFamily="@font/inika_regular"
                android:text="The office or headquarters of a local police force."
                android:textColor="@color/black"
                android:textSize="10sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inika_bold"
                    android:text="View the map"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:textColor="#0652DD" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1.5dp"
                    android:clickable="true"
                    android:contentDescription="Map Icon"
                    android:src="@drawable/arrow_facility" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/fireStation_facility"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/services_shape"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/policeStation_facility"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="@+id/policeStation_facility"
        app:layout_constraintTop_toBottomOf="@+id/policeStation_facility">

        <ImageButton
            android:id="@+id/iconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Icon button"
            app:srcCompat="@drawable/fire_facility" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inika_regular"
                android:padding="2dp"
                android:text="FIRE STATION"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inika_regular"
                android:padding="2dp"
                android:justificationMode="inter_word"
                android:text="A station where fire engines are kept and where firefighters work and stay in the hours they are working."
                android:textColor="@color/black"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inika_bold"
                    android:text="View the map"
                    android:padding="2dp"
                    android:clickable="true"
                    android:textSize="12sp"
                    android:textColor="#0652DD" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1.5dp"
                    android:clickable="true"
                    android:contentDescription="Map Icon"
                    android:src="@drawable/arrow_facility" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mdrrm_office"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/services_shape"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/fireStation_facility"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fireStation_facility"
        app:layout_constraintTop_toBottomOf="@+id/fireStation_facility">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Icon button"
            app:srcCompat="@drawable/mdrrmo_facility" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inika_regular"
                android:padding="2dp"
                android:text="MDRRM OFFICE"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inika_regular"
                android:justificationMode="inter_word"
                android:padding="2dp"
                android:text="Organization typically responsible for planning, implementing, and coordinating disaster preparedness, mitigation, and response efforts in a region or country."
                android:textColor="@color/black"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inika_bold"
                    android:text="View the map"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:textColor="#0652DD" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1.5dp"
                    android:clickable="true"
                    android:contentDescription="Map Icon"
                    android:src="@drawable/arrow_facility" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rhu_facility"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/services_shape"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/fireStation_facility"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fireStation_facility"
        app:layout_constraintTop_toBottomOf="@+id/mdrrm_office">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Icon button"
            app:srcCompat="@drawable/rhu_facility" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inika_regular"
                android:padding="2dp"
                android:text="RHU"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inika_regular"
                android:justificationMode="inter_word"
                android:padding="2dp"
                android:text="Focus on providing immediate healthcare services, health education, and preventive care, making them crucial for both individual and public health crises."
                android:textColor="@color/black"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inika_bold"
                    android:text="View the map"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:textColor="#0652DD" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1.5dp"
                    android:clickable="true"
                    android:contentDescription="Map Icon"
                    android:src="@drawable/arrow_facility" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
